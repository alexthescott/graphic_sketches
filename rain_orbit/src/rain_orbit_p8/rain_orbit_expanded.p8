 x=64+n*9*(sin(circles[n][1]))
 y=64+n*9*(-cos(circles[n][1]))
 circfill(x,y,5,n)
 circfill(-x+128,y,5,6+n)
 circles[n][1]+=circles[n][2]
end
circ(64,64,63,7)
flip()
goto ♥
